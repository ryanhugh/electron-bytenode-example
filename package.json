{
  "name": "electron-bytenode-example",
  "productName": "electron-bytenode-example",
  "version": "1.0.0",
  "description": "Example compiling Electron using Bytenode & Webpack",
  "main": "./.webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "pretest": "npm run package",
    "test": "mocha --require ts-node/register --require tsconfig-paths/register --recursive test/**/*.spec.ts"
  },
  "repository": "https://github.com/spaceagetv/electron-bytenode-example",
  "keywords": [
    "Electron",
    "bytenode",
    "compiler",
    "v8"
  ],
  "author": "Jeff Robbins",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": false
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_forge"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/index.ts",
                  "name": "main_window",
                  "preload": {
                    "config": "webpack.preload.config.js"
                  }
                }
              ]
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0",
    "@electron-forge/maker-deb": "^6.0.0",
    "@electron-forge/maker-rpm": "^6.0.0",
    "@electron-forge/maker-squirrel": "^6.0.0",
    "@electron-forge/maker-zip": "^6.0.0",
    "@electron-forge/plugin-webpack": "6.0.0",
    "@electron/asar": "^3.2.2",
    "@herberttn/bytenode-webpack-plugin": "^2.2.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "chai": "^4.3.7",
    "chai-bytes": "^0.1.2",
    "css-loader": "^6.7.1",
    "electron": "^21.2.2",
    "electron-playwright-helpers": "^1.2.2",
    "eslint": "^8.26.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.1.0",
    "node-loader": "^2.0.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "url-loader": "^4.1.1"
  },
  "dependencies": {
    "@sentry/electron": "^4.1.0",
    "bytenode": "^1.3.6",
    "electron-squirrel-startup": "^1.0.0"
  }
}